<Window x:Class="LOLSummonerTiming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LOLSummonerTiming"
        mc:Ignorable="d"
        Title="LOLSummonerTiming" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="12" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Width="220" Height="32" Margin="0,12,0,0" Content="Открыть назначение клавиш" Click="OpenKeyBindings_Click"/>
            <Button Width="220" Height="32" Margin="0,12,0,0" Content="Открыть окно работы" Click="OpenWorkWindow_Click"/>
            <Button Width="220" Height="32" Margin="0,12,0,0" Content="Настройки текста" Click="OpenTextSettings_Click"/>
        </StackPanel>
    </Grid>
</Window>
