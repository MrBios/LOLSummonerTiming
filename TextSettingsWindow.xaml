<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="LOLSummonerTiming.TextSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Text Settings" Height="330" Width="480" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>

            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="4"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Basic text settings -->
        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Text before time:"/>
        <TextBox Grid.Row="0" Grid.Column="2" MinWidth="260" Text="{Binding BeforeText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Row template:"/>
        <TextBox Grid.Row="2" Grid.Column="2" MinWidth="260" Text="{Binding TextTemplate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Role names -->
        <TextBlock Grid.Row="4" Grid.ColumnSpan="3" FontWeight="SemiBold" Text="Role names:"/>

        <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="Top:"/>
        <TextBox Grid.Row="6" Grid.Column="2" MinWidth="200" Text="{Binding TopRole, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="Jungle:"/>
        <TextBox Grid.Row="8" Grid.Column="2" MinWidth="200" Text="{Binding JungleRole, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" Text="Mid:"/>
        <TextBox Grid.Row="10" Grid.Column="2" MinWidth="200" Text="{Binding MidRole, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="12" Grid.Column="0" VerticalAlignment="Center" Text="ADC:"/>
        <TextBox Grid.Row="12" Grid.Column="2" MinWidth="200" Text="{Binding AdcRole, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="14" Grid.Column="0" VerticalAlignment="Center" Text="Support:"/>
        <TextBox Grid.Row="14" Grid.Column="2" MinWidth="200" Text="{Binding SupportRole, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Help / info -->
        <TextBlock Grid.Row="15" Grid.ColumnSpan="3" Opacity="0.7" TextWrapping="Wrap" Margin="0,10"
                   Text="Placeholders: {role} - role (from fields above), {time} - time. Example: &quot;{role} {time}&quot;."/>

        <!-- Buttons -->
        <StackPanel Grid.Row="17" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Width="90" Content="Close" IsDefault="True" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
