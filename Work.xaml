<Window x:Class="LOLSummonerTiming.Work"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LOLSummonerTiming"
        mc:Ignorable="d"
        Title="Work" Height="450" Width="800" Closing="Window_Closing">
    <Window.Resources>
        <local:KeyToStringConverter x:Key="KeyToStringConverter"/>
    </Window.Resources>
    <Grid>
        <StackPanel Visibility="Visible" x:Name="startPanel" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Для старта нажмите клавишу" FontSize="30" HorizontalAlignment="Center" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding SendKey, Converter={StaticResource KeyToStringConverter}}" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center"/>
        </StackPanel>
        <Grid x:Name="mainGrid" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Grid.Row="1" Content="Top:" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" FontWeight="SemiBold"/>
                <Label Grid.Row="1" x:Name="topLabel" Content="00:00" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" FontSize="20"/>

                <Label Grid.Row="2" Content="Jungle:" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" FontWeight="SemiBold"/>
                <Label Grid.Row="2" x:Name="jungleLabel" Content="00:00" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" FontSize="20"/>

                <Label Grid.Row="3" Content="Mid:" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" FontWeight="SemiBold"/>
                <Label Grid.Row="3" x:Name="midLabel" Content="00:00" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" FontSize="20"/>

                <Label Grid.Row="4" Content="ADC:" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" FontWeight="SemiBold"/>
                <Label Grid.Row="4" x:Name="adcLabel" Content="00:00" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" FontSize="20"/>

                <Label Grid.Row="5" Content="Support:" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" FontWeight="SemiBold"/>
                <Label Grid.Row="5" x:Name="supportLabel" Content="00:00" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" FontSize="20"/>
            </Grid>

            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" d:LayoutOverrides="LeftPosition, RightPosition">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Label Content="game time:" FontSize="20" FontWeight="SemiBold"/>
                    <Label x:Name="timeText" Content="00:00" FontSize="20"/>
                </StackPanel>
                <Label Content="logs" HorizontalAlignment="Center" Margin="-6"/>
                <TextBox x:Name="text" IsReadOnly="True" Width="300" Height="250" BorderBrush="Black" BorderThickness="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
